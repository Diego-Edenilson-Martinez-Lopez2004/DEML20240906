@model DEML.DTOs.ProductsDEMLDTOs.GetIdResultProductsDEMLDTO

@{
    ViewData["Title"] = "Details";
}

<div class="row" style="margin-top:70px;">
    <div class="row">
        <form asp-action="Details" class="card">
            <div class="card-header row">
                <h1 class="card-text col-md-12">Detalle Producto</h1>
            </div>
            <div class="card-body row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />

                <div class="form-group col-md-6">
                    <label asp-for="NombreDEML" class="control-label">Nombre</label>
                    <input asp-for="NombreDEML" disabled class="form-control" />
                    <span asp-validation-for="NombreDEML" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Precio" class="control-label">Precio</label>
                    <input asp-for="Precio" type="number" disabled class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="DescripcionDEML" class="control-label">Descripción</label>
                    <textarea asp-for="DescripcionDEML" disabled class="form-control"></textarea>
                    <span asp-validation-for="DescripcionDEML" class="text-danger"></span>
                </div>

                <div class="col-md-6" style="margin-top:10px;">
                    @Html.ActionLink("Modificar", "Edit", new { id = Model.Id }, new { @class = "btn btn-success", style = "width:100%;" })
                </div>

                <div class="col-md-6" style="margin-top:10px;">
                    <a class="btn btn-secondary" style="width:100%;" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>