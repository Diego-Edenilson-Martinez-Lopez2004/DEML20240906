@model IEnumerable<SearchResultProductsDEMLDTO.ProductsDEMLDTO>

<div class="row" style="margin-top:10px;">
    <div class="table-responsive col-md-12">
        <table class="table table-striped table-hover table-secondary">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(item => item.NombreDEML)</th>
                    <th>@Html.DisplayNameFor(item => item.DescripcionDEML)</th>
                    <th>@Html.DisplayNameFor(item => item.Precio)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NombreDEML)</td>
                        <td>@Html.DisplayFor(modelItem => item.DescripcionDEML)</td>
                        <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                        <td>
                            <table>
                                <tr>
                                    <td>
                                        @Html.ActionLink("Modificar", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Detalle", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>